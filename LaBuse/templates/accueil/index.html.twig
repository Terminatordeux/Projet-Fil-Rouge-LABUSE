{% extends 'base.html.twig' %}
   
        {% block body %}
        <div class="row p-3" >
        <div class="col">
    <div class="form-group">
      <label for="Categorie" class="form-label mt-4">Catégorie</label>
      <select class="form-select" id="Categorie">
        <option>Imprimante FDM</option>
        <option>Imprimante Résine</option>
        <option>Laser de gravure</option>
        <option>Wash n Cure Résine</option>
      </select>
    </div>
    </div>
    <div class="col">
    <div class="form-group">
      <label for="Recherche" class="form-label mt-4">Recherche</label>
      <input type="email" class="form-control" id="Recherche" aria-describedby="emailHelp" placeholder="Que recherchez-vous ?">
      <small id="emailHelp" class="form-text text-muted">Exemple : imprimante silencieuse</small>
    </div>
    </div>
    <div class="col">
    <div class="form-group">
      <label for="Region" class="form-label mt-4">Département</label>
      <select class="form-select" id="Region">
        <option>Aveyron</option>
        <option>Haute-Garonne</option>
      </select>
    </div>
    </div>
    </div>
        <h1 class="text-center">Annonces à la une !</h1>
        <div class="d-flex flex-wrap justify-content-around">
        
        {% for annonce in Annonces %}
        
        <div class="card m-5" style="width: 14rem;">
  <h3 class="card-header text-center">{{ annonce.Titre }}</h3>
  <div class="card-body">
    <h5 class="card-title text-center">{{ annonce.Type }}</h5>
  </div>
  <div class="card-body">
    {# <rect width="100%" height="100%" fill="#868e96"></rect> #}
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="{{ annonce.photo1 }}" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{ annonce.photo2 }}" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{ annonce.photo3 }}" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>
  
  {# <div class="card-body">
    <button type="button primary"> <a href="/show/{{annonce.id}}">Voir le contenu de l'annonce {{annonce.id}}</a></button>
  </div> #}
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Créé le : {{ annonce.Date | date("d/m/Y")}}</li>
    {# <li class="list-group-item">à : {{ annonce.updatedAt | date("H:i")}}</li> #}
  </ul>
  
 
</div>
{% endfor %}
</div>
{% endblock %}


